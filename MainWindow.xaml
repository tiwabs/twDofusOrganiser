<Window x:Class="twDofusOrganiser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:twDofusOrganiser"
        mc:Ignorable="d"
        Title="Tw Dofus Organizer v1.0"
        Width="520"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#1E1E1E"
        Foreground="#F0F0F0"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Window.Resources>
        <!-- Base button template reused for all buttons -->
        <ControlTemplate x:Key="ButtonTemplateDarkHover" TargetType="Button">
            <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Padding="{TemplateBinding Padding}">
                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                  RecognizesAccessKey="True" />
            </Border>
            <ControlTemplate.Triggers>
                <!-- Default dark hover -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border"
                            Property="Background"
                            Value="#3E3E3E" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="border"
                            Property="Background"
                            Value="#333333" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="border"
                            Property="Opacity"
                            Value="0.5" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Template with lighter blue hover for the Refresh button -->
        <ControlTemplate x:Key="ButtonTemplateBlueHover" TargetType="Button">
            <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Padding="{TemplateBinding Padding}">
                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                  RecognizesAccessKey="True" />
            </Border>
            <ControlTemplate.Triggers>
                <!-- Lighter blue hover for Refresh -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border"
                            Property="Background"
                            Value="#1A88FF" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="border"
                            Property="Background"
                            Value="#0060A8" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="border"
                            Property="Opacity"
                            Value="0.5" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Default style: dark hover -->
        <Style x:Key="DefaultButtonStyle" TargetType="Button">
            <Setter Property="Template" Value="{StaticResource ButtonTemplateDarkHover}" />
        </Style>

        <!-- Style for the Refresh button: blue hover -->
        <Style x:Key="RefreshButtonStyle" TargetType="Button">
            <Setter Property="Template" Value="{StaticResource ButtonTemplateBlueHover}" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Custom header -->
            <RowDefinition Height="*" />
            <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- Custom header (acts as window title bar) -->
        <Grid Grid.Row="0"
              Margin="0,0,0,0"
              Background="#2A2A2A"
              MouseDown="HeaderGrid_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Title aligned left to behave like a classic window header -->
            <TextBlock Grid.Column="0"
                       Text="Tw Dofus Organizer v1.0"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"
                       Foreground="#F0F0F0" />

            <!-- Menu button (Activate / Quit) -->
            <Button Grid.Column="1"
                    x:Name="TrayMenuButton"
                    Width="24"
                    Height="24"
                    Margin="8,4,8,4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="#333333"
                    BorderBrush="#555555"
                    Style="{StaticResource DefaultButtonStyle}"
                    Click="TrayMenuButton_Click"
                    ToolTip="Menu to activate or quit the app">
                <Button.ContextMenu>
                    <ContextMenu Background="#2A2A2A"
                                 Foreground="#F0F0F0"
                                 BorderBrush="#444444">
                        <ContextMenu.Resources>
                            <!-- Dark style for menu items with custom template so highlight uses our colors -->
                            <Style TargetType="MenuItem">
                                <Setter Property="Background" Value="#2A2A2A" />
                                <Setter Property="Foreground" Value="#F0F0F0" />
                                <Setter Property="BorderBrush" Value="#2A2A2A" />
                                <Setter Property="Padding" Value="6,2" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="MenuItem">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="0">
                                                <Grid Margin="4,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Icon -->
                                                    <ContentPresenter Grid.Column="0"
                                                                      Margin="0,0,6,0"
                                                                      VerticalAlignment="Center"
                                                                      ContentSource="Icon" />

                                                    <!-- Header -->
                                                    <ContentPresenter Grid.Column="1"
                                                                      VerticalAlignment="Center"
                                                                      RecognizesAccessKey="True"
                                                                      ContentSource="Header" />
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <!-- Hover / highlight -->
                                                <Trigger Property="IsHighlighted" Value="True">
                                                    <Setter TargetName="border"
                                                            Property="Background"
                                                            Value="#3E3E3E" />
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="border"
                                                            Property="Opacity"
                                                            Value="0.5" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ContextMenu.Resources>

                        <!-- Use PNG icons from Images/Activate.png and Images/Close.png -->
                        <MenuItem Header="Activate"
                                  Click="ActivateMenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="pack://application:,,,/Images/Activate.png"
                                       Width="14"
                                       Height="14" />
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Header="Quit"
                                  Click="QuitMenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="pack://application:,,,/Images/Close.png"
                                       Width="14"
                                       Height="14" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </Button.ContextMenu>

                <Image Source="pack://application:,,,/Images/Menu.png"
                    Width="16"
                    Height="16" />
            </Button>
        </Grid>

        <Border Grid.Row="1"
                Margin="8"
                BorderBrush="#3C3C3C"
                BorderThickness="1"
                CornerRadius="6"
                Background="#252526">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Column header -->
                    <RowDefinition Height="Auto" />
                    <!-- List -->
                    <RowDefinition Height="Auto" />
                    <!-- Bottom: hotkeys + refresh -->
                </Grid.RowDefinitions>

                <!-- Column header -->
                <Grid Grid.Row="0"
                  Margin="0,0,4,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!-- Icon -->
                        <ColumnDefinition Width="6" />
                        <ColumnDefinition Width="*" />
                        <!-- Name -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Checkbox -->
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="2"
                               Text="Character"
                               FontWeight="Bold"
                               Foreground="#F0F0F0" />

                    <TextBlock Grid.Column="3"
                               Text="Active"
                               FontWeight="Bold"
                               HorizontalAlignment="Right"
                               Foreground="#F0F0F0" />

                </Grid>

                <!-- List of windows -->
                <ListBox Grid.Row="1"
                         x:Name="WindowsList"
                         ItemsSource="{Binding Windows}"
                         BorderBrush="#3C3C3C"
                         BorderThickness="1"
                         Background="#1E1E1E"
                         Foreground="#F0F0F0"
                         AllowDrop="True"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MaxHeight="260"
                         PreviewMouseLeftButtonDown="WindowsList_PreviewMouseLeftButtonDown"
                         PreviewMouseMove="WindowsList_PreviewMouseMove"
                         Drop="WindowsList_Drop"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Background" Value="#1E1E1E" />
                            <Setter Property="Foreground" Value="#F0F0F0" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3E3E3E" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#007ACC" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <!-- Icon -->
                                    <ColumnDefinition Width="6" />
                                    <ColumnDefinition Width="*" />
                                    <!-- Name -->
                                    <ColumnDefinition Width="Auto" />
                                    <!-- Checkbox -->
                                </Grid.ColumnDefinitions>

                                <!-- Class icon -->
                                <Image Grid.Column="0"
                                   Width="20"
                                   Height="20"
                                   VerticalAlignment="Center"
                                   Source="{Binding ClassIconPath}" />

                                <!-- Character name -->
                                <TextBlock Grid.Column="2"
                                       Text="{Binding CharacterName}"
                                       VerticalAlignment="Center"
                                       Foreground="#F0F0F0" />

                                <!-- Enabled checkbox -->
                                <CheckBox Grid.Column="3"
                                      Margin="4,0"
                                      IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Foreground="#F0F0F0" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Bottom controls: Previous / Next hotkeys + Refresh -->
                <Grid Grid.Row="2"
                  Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="6" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Keybinds Previous / Next -->
                    <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                        <!-- Previous -->
                        <Button x:Name="PreviousHotkeyButton"
                                Width="140"
                                Height="26"
                                Background="#333333"
                                Foreground="#F0F0F0"
                                BorderBrush="#555555"
                                Style="{StaticResource DefaultButtonStyle}"
                                Click="PreviousHotkeyButton_Click"
                                MouseRightButtonUp="PreviousHotkeyButton_MouseRightButtonUp"
                                Margin="0,0,16,0"
                                ToolTip="Keybind to switch to the previous window, Right click to unbind">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Image Source="pack://application:,,,/Images/Previous.png"
                                       Width="16"
                                       Height="16"
                                       Margin="0,0,6,0" />
                                <TextBlock Text="Previous:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,4,0"
                                       Foreground="#F0F0F0" />
                                <TextBlock x:Name="PreviousHotkeyLabel"
                                        Text="None" />
                            </StackPanel>
                        </Button>

                        <!-- Next -->
                        <Button x:Name="NextHotkeyButton"
                                Width="140"
                                Height="26"
                                Background="#333333"
                                Foreground="#F0F0F0"
                                BorderBrush="#555555"
                                Style="{StaticResource DefaultButtonStyle}"
                                Click="NextHotkeyButton_Click"
                                MouseRightButtonUp="NextHotkeyButton_MouseRightButtonUp"
                                ToolTip="Keybind to switch to the next window, Right click to unbind">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Image Source="pack://application:,,,/Images/Next.png"
                                       Width="16"
                                       Height="16"
                                       Margin="0,0,6,0" />
                                <TextBlock Text="Next:"
                                           VerticalAlignment="Center"
                                           Margin="0,0,4,0"
                                           Foreground="#F0F0F0" />
                                <TextBlock x:Name="NextHotkeyLabel"
                                           Text="None" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Refresh button -->
                    <Button Grid.Column="3"
                            Content="Refresh"
                            Width="90"
                            Height="26"
                            Margin="16,0,0,0"
                            VerticalAlignment="Center"
                            Click="RefreshButton_Click"
                            Background="#007ACC"
                            Foreground="#F0F0F0"
                            BorderBrush="#005A9E"
                            Style="{StaticResource RefreshButtonStyle}"
                            ToolTip="Refresh the window list"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
